<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testKolanglods.ui.TestDashboardFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/joined_classes_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:background="@color/dirtyWhite"
        app:layout_constraintBottom_toTopOf="@+id/test_createClass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/test_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/test_joinClass"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/test_createClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Class"
        app:layout_constraintBottom_toTopOf="@+id/test_logout"
        app:layout_constraintEnd_toStartOf="@+id/test_logout" />

    <Button
        android:id="@+id/test_joinClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Class"
        app:layout_constraintBottom_toTopOf="@+id/test_logout"
        app:layout_constraintStart_toEndOf="@+id/test_logout" />

</androidx.constraintlayout.widget.ConstraintLayout>