<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dirtyWhite"
    tools:context=".student.ui.fragments.dashboard.SettingsFragment">


    <ImageView
        android:id="@+id/imgAbtUs_logo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/logo_sunnyside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtAbtUs_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/metropolis_bold"
        android:text="ABOUT US"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/grey"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/imgAbtUs_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtAbtUs_mission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/metropolis_semibold"
        android:text="Mission"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:background="@drawable/rectangle"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtAbtUs_about"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txtAbtUs_missionContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To bring into reality the ideas in mind of great people to innovative, competetive, and creative design application that will confidently dominate the world."
        android:fontFamily="@font/metropolis_regular"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtAbtUs_mission"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txtAbtUs_vision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/metropolis_semibold"
        android:text="Vision"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:background="@drawable/rectangle"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtAbtUs_missionContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txtAbtUs_visionContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To endlessly develop in a constant manner and become the leading world-class application developer in this global free enterprise."
        android:fontFamily="@font/metropolis_regular"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtAbtUs_vision"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtAbtUs_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/metropolis_semibold"
        android:text="The Team"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:textSize="22sp"
        android:background="@drawable/rectangle"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtAbtUs_visionContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtAbtUs_projMan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project Manager: Rafael Ranario"
        android:fontFamily="@font/metropolis_regular"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtAbtUs_team"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtAbtUs_busiAna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Business Analyst: Tom Jandale Maruzzo"
        android:fontFamily="@font/metropolis_regular"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtAbtUs_projMan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtAbtUs_fronEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Front End Developer: Arianne Pauline Ignacio"
        android:fontFamily="@font/metropolis_regular"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtAbtUs_busiAna"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtAbtUs_backEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back End Developer: Morris John Montemayor"
        android:fontFamily="@font/metropolis_regular"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtAbtUs_fronEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>